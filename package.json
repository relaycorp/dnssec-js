{
  "name": "@relaycorp/dnssec-verifier",
  "version": "1.0.0",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "Resolver-agnostic DNSSEC verification library",
  "type": "module",
  "typings": "build/lib/index.d.ts",
  "module": "build/lib/index.js",
  "repository": "https://github.com/relaycorp/dnssec-verifier-js",
  "homepage": "https://docs.relaycorp.tech/dnssec-verifier-js/",
  "license": "MIT",
  "keywords": [
    "dnssec",
    "rfc1035",
    "rfc4033"
  ],
  "scripts": {
    "build": "run-s clean tsc",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=src/integration_tests/jest.config.mjs",
    "tsc": "tsc",
    "doc-api": "typedoc src/index.ts --out build/docs",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@relaycorp/shared-config": "^1.9.1",
    "@types/jest": "^27.5.0",
    "del-cli": "^5.0.0",
    "jest": "^28.1.3",
    "jest-date-mock": "^1.0.8",
    "jest-extended": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.23.14",
    "typescript": "^4.8.2"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
